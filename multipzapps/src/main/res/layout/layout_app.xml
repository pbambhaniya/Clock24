<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_lg"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/img_lg"
        android:layout_toLeftOf="@+id/txt_get"
        android:id="@+id/lnr_desc"
        android:padding="4dp"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="18sp"
            android:id="@+id/txt_title"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title" />

        <TextView
            android:text="Desc fdsa jhfsahfhas jfhash fsah fsadf fhaskfh sadh fash fhsdh fsdahf jkahsf jasf kj hfsadjh  fhasj"
            android:maxLines="2"
            android:textSize="12sp"
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:background="@drawable/border"
        android:textSize="16sp"
        android:id="@+id/txt_get"
        android:textColor="#05f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="GET" />

</RelativeLayout>